# Production Configuration for dreamerai.io
# IMPORTANT: Copy this to .env.production and fill in actual values
# NEVER commit the actual .env.production file to version control

# Server Configuration
NODE_ENV=production
PORT=5000
HTTPS_PORT=5443
ENABLE_HTTPS=true

# Domain Configuration
API_URL=https://api.dreamerai.io
FRONTEND_URL=https://dreamerai.io
ALLOWED_ORIGINS=https://dreamerai.io,https://www.dreamerai.io

# TLS/SSL Configuration
TLS_KEY_PATH=/path/to/ssl/private.key
TLS_CERT_PATH=/path/to/ssl/certificate.crt
TLS_CA_PATH=/path/to/ssl/ca_bundle.crt

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=dreamerai_production
DB_USER=dreamerai_app
DB_PASSWORD=strong_database_password_here
DB_SSL=true
DB_POOL_SIZE=20
DB_POOL_MAX=50

# Redis Configuration
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=strong_redis_password_here
REDIS_TLS=true

# JWT Configuration
JWT_ACCESS_SECRET=generate_strong_64_char_secret_here
JWT_REFRESH_SECRET=generate_another_strong_64_char_secret_here
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Password Security
PASSWORD_PEPPER=generate_strong_pepper_secret_here
BCRYPT_ROUNDS=14

# Session Configuration
SESSION_SECRET=generate_strong_session_secret_here
SESSION_TIMEOUT=1800000
MAX_CONCURRENT_SESSIONS=5

# API Keys (Production)
ANTHROPIC_API_KEY=your_production_anthropic_api_key
OPENAI_API_KEY=your_production_openai_api_key
GOOGLE_API_KEY=your_production_google_api_key
ELEVENLABS_API_KEY=your_production_elevenlabs_api_key

# Email Configuration (Production)
EMAIL_HOST=your-production-smtp-host
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=noreply@dreamerai.io
EMAIL_PASS=production_email_password
EMAIL_FROM=Dreamer AI Solutions <noreply@dreamerai.io>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Security Headers
CSP_REPORT_URI=https://api.dreamerai.io/api/v1/security/csp-report
HSTS_MAX_AGE=31536000

# IP Access Control (Optional)
# IP_WHITELIST=
# IP_BLACKLIST=

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_api_key_here

# Backup Configuration
BACKUP_ENCRYPTION_KEY=generate_backup_encryption_key
BACKUP_S3_BUCKET=dreamerai-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Feature Flags
ENABLE_MFA=true
ENABLE_DEVICE_TRUST=true
ENABLE_AUDIT_LOG=true
ENABLE_SECURITY_MONITORING=true

# Third-party Services
STRIPE_SECRET_KEY=your_production_stripe_key
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# Miscellaneous
API_VERSION=1.0.0
DEPLOYMENT_ID=prod-001