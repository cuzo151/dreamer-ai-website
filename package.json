{
  "name": "dreamer-ai-solutions",
  "version": "1.0.0",
  "description": "Dreamer AI Solutions - Enterprise AI Platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "test:unit:backend": "cd backend && npm run test:unit",
    "test:integration:backend": "cd backend && npm run test:integration",
    "test:e2e": "cypress run",
    "test:all": "npm run test:backend && npm run test:frontend && npm run test:e2e",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:coverage": "npm run test:coverage:frontend && npm run test:coverage:backend",
    "test:coverage:frontend": "cd frontend && npm run test -- --coverage --watchAll=false",
    "test:coverage:backend": "cd backend && npm run test -- --coverage",
    "test:related": "jest -o",
    "security:check": "npm audit && cd frontend && npm audit && cd ../backend && npm audit",
    "prepare": "husky",
    "validate": "npm run lint && npm run format:check && npm run test",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "setup:hooks": "bash scripts/setup-hooks.sh",
    "setup:backend": "cd backend && npm run db:setup && npm run db:migrate",
    "seed:backend": "cd backend && npm run db:seed"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamer-ai/solutions-website.git"
  },
  "keywords": [
    "AI",
    "artificial-intelligence",
    "enterprise",
    "react",
    "typescript",
    "node.js",
    "express"
  ],
  "author": "Dreamer AI Solutions",
  "license": "UNLICENSED",
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^56.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-normalize": "^13.0.1",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.4.2",
    "sort-package-json": "^2.12.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
